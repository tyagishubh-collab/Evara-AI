# Pathfinder Configuration

# Vision Model
VISION_MODEL=yolov8n.pt

# TTS/STT
TTS_ENGINE=pyttsx3
STT_MODEL=vosk-model-small-en-us-0.15

# Optional: Gemini API for enhanced narration (keep offline-first)
GEMINI_API_KEY=your_gemini_api_key_here

# Sensor Configuration
ULTRASONIC_TRIGGER_PIN=23
ULTRASONIC_ECHO_PIN=24
IMU_I2C_ADDRESS=0x68
GPS_SERIAL_PORT=/dev/ttyUSB0

# Safety Thresholds
DANGER_DISTANCE_M=1.5
BATTERY_LOW_VOLTAGE=3.3
THERMAL_MAX_C=70

# Navigation
OSM_DATA_DIR=./data/osm
INDOOR_TAGS_DIR=./data/tags
